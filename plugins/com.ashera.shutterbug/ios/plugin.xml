<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.ashera.shutterbug.ios"
        version="1.0">

  <name>CordovaShutterBugPlugin Plugin</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>
  
  <platform name="ios">
    <config-file target="config.xml" parent="/widget">
      <feature name="CordovaShutterBugPlugin">
        	<param name="ios-package" value="CordovaShutterBugPlugin" />
         	<param name="onload" value="true" />
      </feature>
    </config-file>

   	 <!-- start ios -->
     <header-file src="ios/src/BitmapFactoryScale.h" target-dir="ShutterBugPlugin/ios/src"/>
     <source-file src="ios/src/BitmapFactoryScale.m" target-dir="ShutterBugPlugin/ios/src" compiler-flags="-fobjc-arc-exceptions"/>
     <header-file src="ios/src/CordovaShutterBugPlugin.h" target-dir="ShutterBugPlugin/ios/src"/>
     <source-file src="ios/src/CordovaShutterBugPlugin.m" target-dir="ShutterBugPlugin/ios/src" compiler-flags="-fobjc-arc-exceptions"/>
     <header-file src="ios/src/DiskLruCache.h" target-dir="ShutterBugPlugin/ios/src"/>
     <source-file src="ios/src/DiskLruCache.m" target-dir="ShutterBugPlugin/ios/src" compiler-flags="-fobjc-arc-exceptions"/>
     <header-file src="ios/src/DownloadRequest.h" target-dir="ShutterBugPlugin/ios/src"/>
     <source-file src="ios/src/DownloadRequest.m" target-dir="ShutterBugPlugin/ios/src" compiler-flags="-fobjc-arc-exceptions"/>
     <header-file src="ios/src/ImageCache.h" target-dir="ShutterBugPlugin/ios/src"/>
     <source-file src="ios/src/ImageCache.m" target-dir="ShutterBugPlugin/ios/src" compiler-flags="-fobjc-arc-exceptions"/>
     <header-file src="ios/src/ImageLoader.h" target-dir="ShutterBugPlugin/ios/src"/>
     <source-file src="ios/src/ImageLoader.m" target-dir="ShutterBugPlugin/ios/src" compiler-flags="-fobjc-arc-exceptions"/>
     <header-file src="ios/src/LruCache.h" target-dir="ShutterBugPlugin/ios/src"/>
     <source-file src="ios/src/LruCache.m" target-dir="ShutterBugPlugin/ios/src" compiler-flags="-fobjc-arc-exceptions"/>
     <header-file src="ios/src/ShutterbugDownloader.h" target-dir="ShutterBugPlugin/ios/src"/>
     <source-file src="ios/src/ShutterbugDownloader.m" target-dir="ShutterBugPlugin/ios/src" compiler-flags="-fobjc-arc-exceptions"/>
     <header-file src="ios/src/ShutterbugImageCallBack.h" target-dir="ShutterBugPlugin/ios/src"/>
     <source-file src="ios/src/ShutterbugImageCallBack.m" target-dir="ShutterBugPlugin/ios/src" compiler-flags="-fobjc-arc-exceptions"/>
     <header-file src="ios/src/ShutterbugManager.h" target-dir="ShutterBugPlugin/ios/src"/>
     <source-file src="ios/src/ShutterbugManager.m" target-dir="ShutterBugPlugin/ios/src" compiler-flags="-fobjc-arc-exceptions"/>
     <header-file src="ios/src/ShutterBugPlugin.h" target-dir="ShutterBugPlugin/ios/src"/>
     <source-file src="ios/src/ShutterBugPlugin.m" target-dir="ShutterBugPlugin/ios/src" compiler-flags="-fobjc-arc-exceptions"/>
     <!-- ios end -->
     <!-- start tsc -->

     <!-- tsc end -->
  </platform>
  


</plugin>