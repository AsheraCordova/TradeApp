<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ashera.demoapp1" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DemoApp</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/icon/android/ldpi.png" />
    <icon density="mdpi" src="res/icon/android/mdpi.png" />
    <icon density="hdpi" src="res/icon/android/hdpi.png" />
    <icon density="xhdpi" src="res/icon/android/xhdpi.png" />
    <icon density="xxhdpi" src="res/icon/android/xxhdpi.png" />
    <icon density="xxxhdpi" src="res/icon/android/xxxhdpi.png" />
    <splash density="port-ldpi" src="res/screen/android/splash-port-ldpi.png" />
    <splash density="port-mdpi" src="res/screen/android/splash-port-mdpi.png" />
    <splash density="port-hdpi" src="res/screen/android/splash-port-hdpi.png" />
    <splash density="port-xhdpi" src="res/screen/android/splash-port-xhdpi.png" />
    <splash density="port-xxhdpi" src="res/screen/android/splash-port-xxhdpi.png" />
    <splash density="port-xxxhdpi" src="res/screen/android/splash-port-xxxhdpi.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
    <preference name="webScaleFactor" value="1.2" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="ConverterCordovaPlugin">
        <param name="android-package" value="com.ashera.converter.ConverterCordovaPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="CoreCordovaPlugin">
        <param name="android-package" value="com.ashera.core.CoreCordovaPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="JSONAdapterCordovaPlugin">
        <param name="android-package" value="com.ashera.jsonadapter.JSONAdapterCordovaPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="AndroidLayoutsCordovaPlugin">
        <param name="android-package" value="com.ashera.layout.AndroidLayoutsCordovaPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="AndroidXConstraintLayout">
        <param name="android-package" value="com.ashera.constraintlayout.AndroidXConstraintLayout" />
        <param name="onload" value="true" />
    </feature>
    <feature name="AndroidXGridLayoutPlugin">
        <param name="android-package" value="com.ashera.gridlayout.AndroidXGridLayoutPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="AndroidCSSBorderPlugin">
        <param name="android-package" value="com.ashera.cssborder.BorderCordovaPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="CordovaCapInsetsPlugin">
        <param name="android-package" value="com.ashera.capinsets.CordovaCapInsetsPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="CordovaRecycleViewPlugin">
        <param name="android-package" value="com.ashera.recycleview.CordovaRecycleViewPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="CordovaNavigationDrawerPlugin">
        <param name="android-package" value="com.ashera.drawerlayout.CordovaNavigationDrawerPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="CordovaToolbarPlugin">
        <param name="android-package" value="com.ashera.toolbar.CordovaToolbarPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="CordovaDateTimePlugin">
        <param name="android-package" value="com.ashera.datetime.CordovaDateTimePlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SpinnerDialog">
        <param name="android-package" value="com.filfatstudios.spinnerdialog.SpinnerDialog" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <feature name="CustomCordovaPlugin">
        <param name="android-package" value="com.ashera.custom.CustomCordovaPlugin" />
        <param name="onload" value="true" />
    </feature>
</widget>
